<div class="form-group">
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text">Email</span>
        </div>
        <input readonly type="text" class="form-control" value="<%= user.email %>">
    </div>
</div>
<div class="form-group">
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text">Tên</span>
        </div>
        <input type="text" id="name" class="form-control" value="<%= user.name %>">
    </div>
</div>
<div class="form-group">
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text">Số ĐT</span>
        </div>
        <input type="text" id="phone" class="form-control" value="<%= user.phone %>">
    </div>
</div>
<div class="form-group">
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text">Giới tính</span>
        </div>
        <input type="text" id="gender" class="form-control" value="<%= user.gender %>">
    </div>
</div>
<div class="form-group">
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text">Tuổi</span>
        </div>
        <input type="text" id="age" class="form-control" value="<%= user.age %>">
    </div>
</div>
<div class="form-group">
    <select id="role_tags" class="form-control" multiple="multiple">
        <% roles.forEach(role => { %>                   
            <% if(role.selected !== undefined) { %>
                <option selected><%= role.name %></option>
            <% } else { %>
                <option><%= role.name %></option>
            <% } %>
        <% }) %>
    </select>
</div>
<div class="form-group">
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text">Ngày tạo</span>
        </div>
        <input readonly type="text" class="form-control" value="<%= user.createdAt.toLocaleString() %>">
    </div>
</div>